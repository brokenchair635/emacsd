(require 'package)(add-to-list 'package-archives             '("melpa" . "https://melpa.org/packages/") t)(unless (package-installed-p 'use-package)  (package-refresh-contents)  (package-install 'use-package))(eval-when-compile  (require 'use-package))(use-package flycheck  :ensure t  :init (global-flycheck-mode))(use-package magit  :ensure t)(setq backup-directory-alist `(("." . "~/.emacs.d/backups/")))(set-face-attribute 'default nil :family "Monaco" :height 120)(setq inhibit-startup-screen t)(switch-to-buffer "*scratch*")(setq initial-scratch-message "")(setq ring-bell-function 'ignore)(require 'mouse)(xterm-mouse-mode t)(defun handle-mouse-event (event)  (interactive "e")  (let ((scroll-amount 3)        (event-type (event-basic-type event)))    (cond ((eq event-type 'mouse-5)           (scroll-up scroll-amount))          ((eq event-type 'mouse-4)           (scroll-down scroll-amount))          (t (mouse-set-point event)))))(global-display-line-numbers-mode t)(global-set-key (kbd "<mouse-4>") 'scroll-up-line)(global-set-key (kbd "<mouse-5>") 'scroll-down-line);; 복사(defun my-copy-to-mac-clipboard ()  (interactive)  (if (use-region-p)      (progn        (shell-command-on-region (region-beginning) (region-end) "pbcopy")        (message "Yanked region to clipboard!"))    (message "No region active; can't yank to clipboard!")))(global-set-key (kbd "C-c C-c") 'my-copy-to-mac-clipboard);; 붙여넣기(defun my-paste-from-mac-clipboard ()  (interactive)  (shell-command-on-region (point) (if mark-active (mark) (point)) "pbpaste" nil t))(global-set-key (kbd "C-c C-v") 'my-paste-from-mac-clipboard)(custom-set-variables ;; custom-set-variables was added by Custom. ;; If you edit it by hand, you could mess it up, so be careful. ;; Your init file should contain only one such instance. ;; If there is more than one, they won't work right. '(package-selected-packages '(dockerfile-mode docker flycheck)))(custom-set-faces ;; custom-set-faces was added by Custom. ;; If you edit it by hand, you could mess it up, so be careful. ;; Your init file should contain only one such instance. ;; If there is more than one, they won't work right. )